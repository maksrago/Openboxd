<!DOCTYPE html>
<html lang="en">
  <% include partials/head.ejs %>

  <body>
    <% include partials/header.ejs %>

    <div class="container diary-page-container">
      <div class="diary-row">

	<div class="diary-movie-poster">
	  <img src= <%=poster_path%> >
	</div>

	<div class="diary-additional">
	  <form action= "/users/<%=req.user.username%>/diary" method="POST">
	    <div class="form-group">
	      <label for="username">Film Title</label> <input type="text"
							      name = "title" value="<%=title%>" class="form-control" readonly>
	    </div>
	    <div class="form-group" >
	      <label for="poem">Specify the date you watched it</label>
	      <input type="date"   name="date"
		     class="form-control search-query" required="true"
		     min="1990-01-01" max="2099-12-31" onkeypress="return false"/>
	    </div>
	    <div class="form-group form-check">
	      <input class="form-check-input" type="checkbox" name = "favorite" value="true" >
	      <label class="form-check-label">Like?   <i class="text-danger fa fa-heart"></i></label>
	    </div>
	    <input type="hidden" name="poster_path" value="<%=poster_path%>"/>
	    <button type="submit" class="btn btn-primary">Submit</button>
	  </form>
	</div>

      </div>
    </div>


  </body>
  <% include partials/footer.ejs %>
</html>
